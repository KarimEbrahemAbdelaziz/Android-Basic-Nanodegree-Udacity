<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/item_padding"
    android:layout_margin="8dp"
    android:background="@color/colorBookBackground">

    <TextView
        android:id="@+id/book_title"
        tools:text="@string/book_title"
        style="@style/book_title_style" />

    <TextView
        android:id="@+id/book_authors"
        tools:text="@string/book_authors"
        style="@style/book_auth_style" />

    <TextView
        android:id="@+id/book_description"
        tools:text="@string/book_description"
        style="@style/book_info_style" />

</LinearLayout>