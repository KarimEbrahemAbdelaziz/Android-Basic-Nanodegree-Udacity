<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Search theme style. -->
    <style name="search_theme_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/searchField</item>
        <item name="android:padding">@dimen/item_padding</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Search text style. -->
    <style name="search_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:hint">@string/keyword</item>
    </style>

    <!-- Search Button style. -->
    <style name="search_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/btn_search</item>
    </style>

    <!-- Information textView style. -->
    <style name="info_view">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/enter_search_keyword</item>
        <item name="android:layout_margin">@dimen/item_padding</item>
    </style>

    <!-- Recycler View style. -->
    <style name="rec_view_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Book title style. -->
    <style name="book_title_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorBookTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Book author style. -->
    <style name="book_auth_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorBookAuthors</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Book information style. -->
    <style name="book_info_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>
