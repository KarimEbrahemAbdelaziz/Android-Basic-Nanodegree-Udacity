<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for head texts (Store name and About section). -->
    <style name="head_text_style">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for head image. -->
    <style name="head_image_style">
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <!-- Style for line view. -->
    <style name="view_line_style">
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- Style for icons (location and website). -->
    <style name="icon_style">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!-- Style for text with icons. -->
    <style name="icon_text_style">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for information about stylista store. -->
    <style name="about_stylista">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_marginRight">27dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
